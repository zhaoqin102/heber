<configuration debug="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date [%thread] %-5level %logger - %msg %rootException{full} %n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="LOGGER"/>
    </root>
    <logger name="com.muchu" level="info">
        <appender-ref ref="DB"/>
    </logger>
</configuration>